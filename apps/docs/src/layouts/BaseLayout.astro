---
export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "404-UI | Beautiful Animated 404 Pages",
  description = "A library of beautiful, animated 404 error pages for React, Vue, and Vanilla JS"
} = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- SEO -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-gray-50 dark:bg-gray-950">
    <!-- Navigation -->
    <nav class="sticky top-0 z-50 border-b border-gray-200 bg-white/80 backdrop-blur-lg dark:border-gray-800 dark:bg-gray-950/80">
      <div class="mx-auto flex h-16 max-w-7xl items-center justify-between px-4 sm:px-6 lg:px-8">
        <a href="/" class="flex items-center gap-2">
          <span class="text-2xl">üöÄ</span>
          <span class="font-space text-xl font-bold text-gray-900 dark:text-white">404-UI</span>
        </a>
        
        <div class="flex items-center gap-6">
          <a href="/gallery" class="nav-link">Gallery</a>
          <a href="https://github.com/your-username/404-lib" class="nav-link" target="_blank" rel="noopener">
            GitHub
          </a>
          <a href="https://www.npmjs.com/package/@404-ui/core" class="btn btn-primary" target="_blank" rel="noopener">
            Install
          </a>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t border-gray-200 py-12 dark:border-gray-800">
      <div class="mx-auto max-w-7xl px-4 text-center sm:px-6 lg:px-8">
        <p class="text-gray-600 dark:text-gray-400">
          Built with ‚ù§Ô∏è using Astro, React, and Tailwind CSS
        </p>
        <p class="mt-2 text-sm text-gray-500 dark:text-gray-500">
          MIT License ¬© {new Date().getFullYear()}
        </p>
      </div>
    </footer>

    <!-- Dark mode script -->
    <script is:inline>
      // Check for dark mode preference
      if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    </script>
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>
